<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:droidfu="http://github.com/droidfu/schema"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_selector"
              android:padding="5dip">

<RelativeLayout
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearEvents">
	

	<ImageView android:id="@+id/bbEventImage"
           android:scaleType="centerCrop"
           android:layout_width="75dip"
           android:layout_height="75dip"
           android:gravity = "center"
           android:layout_marginLeft="2dip"
           android:layout_marginTop="2dip"/>
	
    
    <ImageView 
		   android:layout_width="79dip"
           android:layout_height="79dip"
           android:background="@drawable/rounded_corners_photo"	/>
     
     <TextView android:id="@+id/bbEventDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left|center"
              android:layout_toRightOf="@id/bbEventImage"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="@color/bbMainTextColor"
              android:layout_marginTop="5dip"
              android:layout_marginLeft="5dip"
              android:layout_marginRight="5dip" /> 
     
     <TextView android:id="@+id/bbWeightPercentile"
               android:layout_width="wrap_content"
               android:gravity="right"
               android:layout_height="wrap_content" 
               android:layout_toRightOf="@id/bbEventDate"
               android:textColor="@color/bbMainTextColor"
               android:layout_alignParentRight="true"/>
     
     <TextView android:id="@+id/bbHeightPercentile"
               android:layout_width="wrap_content"
               android:gravity="right"
               android:layout_height="wrap_content" 
               android:layout_below="@id/bbWeightPercentile"
               android:textColor="@color/bbMainTextColor"
               android:layout_alignLeft="@id/bbWeightPercentile"
               android:layout_alignParentRight="true"/>
         
     <TextView android:id="@+id/bbEventNote"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/bbEventImage"
              android:layout_below="@id/bbHeightPercentile"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="@color/bbMainTextColor"
              android:layout_marginTop="3dip"
              android:layout_marginLeft="5dip"
              android:background="@drawable/rounded_corners_semidark_text"
              android:lines="2"
              android:padding="7dip"/> 
     
</RelativeLayout>
    

   
</LinearLayout>