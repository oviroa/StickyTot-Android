<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:gravity="center_vertical">
 
 <com.garagewarez.bubu.android.utils.VerticalScrollView
	android:id="@+id/bbScrollView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
    
    <LinearLayout
   		android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:padding="20sp">
    	
    <ImageButton
        android:id="@+id/bbMenuHome"
        android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"	 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
       	style="@style/Widget.ImageButton"
       	android:contentDescription="@string/menu"/>    
    
    <LinearLayout
   		android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:paddingBottom="20sp"
    	android:layout_marginTop="20dip">
    	
	    <ImageView
	    	android:src="@drawable/logo_proxy"
	    	android:layout_height="wrap_content" 
	       	android:layout_width="wrap_content"
	       	android:contentDescription="@string/logo"
	       />
	    
	    
	    <TextView 
	       	android:textAppearance="?android:attr/textAppearanceLarge" 
	       	android:id="@+id/textViewWelcome" 
	       	android:text="@string/bbWelcome" 
	       	android:layout_height="match_parent" 
	       	android:gravity="bottom|right" 
	       	android:layout_width="match_parent" 
	       	android:layout_marginBottom="20sp"
	       	android:paddingLeft="10dip">
	    </TextView>
	</LinearLayout>    
    
    <TextView 
    	android:textAppearance="?android:attr/textAppearanceMedium" 
    	android:id="@+id/textViewChoose" 
    	android:layout_height="wrap_content" 
    	android:layout_gravity="center" 
    	android:layout_width="wrap_content" 
    	android:layout_marginBottom="20sp">
    </TextView>
   
   <ListView 
	    	android:layout_height="150dip" 
	    	android:id="@+id/bbAccountListView" 
	    	android:layout_width="match_parent"
	    	android:cacheColorHint="#00000000"
	    	android:listSelector="#00000000"
	    	android:background="@drawable/rounded_corners"
	    	android:footerDividersEnabled="false"
	    	android:layout_marginBottom="20dip">
	</ListView>
    
    <LinearLayout 
    	android:orientation="vertical" 
    	android:layout_height="100dip"
    	android:id="@+id/bbProcessingView" 
    	android:layout_width="match_parent" 
    	android:layout_gravity="fill_vertical"
    	android:gravity="center"
    	android:paddingLeft="20dip"
    	android:paddingRight="20dip"
    	android:visibility="gone"
    	android:layout_marginBottom="20dip">
    	
        <ProgressBar 
        	android:id="@+id/bbProgressBar"
        	android:layout_width="30dip" 
        	android:layout_height="30dip"
        	android:indeterminateDrawable="@drawable/loading_rotation" > 
        </ProgressBar>
        
       
    
    </LinearLayout>
    
   </LinearLayout>
   
   </com.garagewarez.bubu.android.utils.VerticalScrollView>   
    
</LinearLayout><!-- From: file:/Users/oroatis/Documents/workspace/BubuAndroidSVN/app/src/main/res/layout/main.xml -->