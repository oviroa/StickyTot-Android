<?xml version="1.0" encoding="utf-8"?>
<!-- Dimensions layout -->     
 <RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
  	android:layout_height="wrap_content"
  	android:background="@drawable/rounded_corners_kids_semidark"
  	android:padding="16dip"
    android:layout_gravity="center"
    android:layout_marginTop="0dip">
	
    
	    
	    <!-- Weight -->
	    <TextView 
		  	android:id="@+id/bbEventWeight" 
		  	android:text="@string/bbEventWeightIm" 
		  	android:layout_width="wrap_content" 
		  	android:layout_height="wrap_content"
		  	android:layout_marginBottom="5dip"
		  	android:layout_marginRight="15dip"
		  	android:textAppearance="?android:attr/textAppearanceMedium">
		 </TextView>
		  
		 <EditText
		     android:id="@+id/bbEventWeightField"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignLeft="@+id/bbEventWeight"
		     android:layout_alignRight="@id/bbEventWeight"
		     android:layout_below="@id/bbEventWeight"
		     android:layout_marginBottom="5dip"
		     android:background="@drawable/rounded_corners_white"
		     android:inputType="numberDecimal"
		     android:selectAllOnFocus="true"
		     android:text="@string/zero"
		     android:textAppearance="?android:attr/textAppearanceSmall"
		     android:textColor="#ff14808b"
		     android:textColorHighlight="#fff9c5c9" >

		 </EditText>
		  
		 <!--Height -->    
		 <TextView 
		  	android:id="@+id/bbEventHeight" 
		  	android:text="@string/bbEventHeightIm" 
		  	android:layout_width="wrap_content" 
		  	android:layout_height="wrap_content"
		  	android:layout_toRightOf="@id/bbEventWeight"
		  	android:layout_marginBottom="5dip"
		  	android:textAppearance="?android:attr/textAppearanceMedium">
		 </TextView>
		  
		 <EditText
		     android:id="@+id/bbEventHeightField"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignLeft="@+id/bbEventHeight"
		     android:layout_alignRight="@id/bbEventHeight"
		     android:layout_below="@id/bbEventHeight"
		     android:layout_marginBottom="5dip"
		     android:background="@drawable/rounded_corners_white"
		     android:inputType="numberDecimal"
		     android:selectAllOnFocus="true"
		     android:text="@string/zero"
		     android:textAppearance="?android:attr/textAppearanceSmall"
		     android:textColor="#ff14808b"
		     android:textColorHighlight="#fff9c5c9" >

		 </EditText> 
		 
		 <Button
		     android:id="@+id/bbCloseDimensionsDialog"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignLeft="@+id/bbEventWeightField"
		     android:layout_alignRight="@+id/bbEventHeightField"
		     android:layout_below="@id/bbEventHeightField"
		     android:layout_centerVertical="true"
		     android:background="@drawable/button_selector"
		     android:text="@string/bbDone"
		     android:textAppearance="?android:attr/textAppearanceMedium"
		     android:textColor="#ff14808b" />
				     
 </RelativeLayout>   <!-- From: file:/Users/oroatis/Documents/workspace/BubuAndroidSVN/app/src/main/res/layout/dimensions_dialog.xml -->